<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">


    <TextView
            android:id="@+id/open_hours_current_hour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Open until ..."
            android:textColor="@color/open_hours_default_color"
            android:textSize="16sp"/>

    <ImageView
            android:id="@+id/open_hours_image_view_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_keyboard_arrow_down"
            android:tint="@color/ic_keyboard_arrow"/>

    <LinearLayout
            android:id="@+id/open_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">


            <TextView
                    android:id="@+id/open_hours_sunday_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Sunday"
                    android:textAlignment="textStart"
                    android:textColor="@color/open_hours_default_color"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/open_hours_sunday_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8:00AM - 8:00PM"
                    android:textAlignment="textEnd"
                    android:textColor="@color/open_hours_default_color"
                    android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">


            <TextView
                    android:id="@+id/open_hours_monday_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Monday"
                    android:textAlignment="textStart"
                    android:textColor="@color/open_hours_default_color"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/open_hours_monday_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8:00AM - 8:00PM"
                    android:textAlignment="textEnd"
                    android:textColor="@color/open_hours_default_color"
                    android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">


            <TextView
                    android:id="@+id/open_hours_tuesday_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Tuesday"
                    android:textAlignment="textStart"
                    android:textColor="@color/open_hours_default_color"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/open_hours_tuesday_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8:00AM - 8:00PM"
                    android:textAlignment="textEnd"
                    android:textColor="@color/open_hours_default_color"
                    android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">


            <TextView
                    android:id="@+id/open_hours_wednesday_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Wednesday"
                    android:textAlignment="textStart"
                    android:textColor="@color/open_hours_default_color"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/open_hours_wednesday_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8:00AM - 8:00PM"
                    android:textAlignment="textEnd"
                    android:textColor="@color/open_hours_default_color"
                    android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">


            <TextView
                    android:id="@+id/open_hours_thursday_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Thursday"
                    android:textAlignment="textStart"
                    android:textColor="@color/open_hours_default_color"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/open_hours_thursday_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8:00AM - 8:00PM"
                    android:textAlignment="textEnd"
                    android:textColor="@color/open_hours_default_color"
                    android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">


            <TextView
                    android:id="@+id/open_hours_friday_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Friday"
                    android:textAlignment="textStart"
                    android:textColor="@color/open_hours_default_color"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/open_hours_friday_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8:00AM - 8:00PM"
                    android:textAlignment="textEnd"
                    android:textColor="@color/open_hours_default_color"
                    android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">


            <TextView
                    android:id="@+id/open_hours_saturday_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Saturday"
                    android:textAlignment="textStart"
                    android:textColor="@color/open_hours_default_color"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/open_hours_saturday_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8:00AM - 8:00PM"
                    android:textAlignment="textEnd"
                    android:textColor="@color/open_hours_default_color"
                    android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>